{
  "name": "ts-template",
  "main": "dist/main.js",
  "module": "src/main.ts",
  "type": "module",
  "scripts": {
    "dev": "bun run . --hot",
    "build": "bun build --target=bun src/main.ts --outfile=dist/main.js",
    "start": "bun run .",
    "lint": "prettier --check . && eslint src --ext ts --format=pretty",
    "format": "prettier --write . && eslint src --ext ts --fix --format=pretty"
  },
  "dependencies": {
    "figlet": "^1.6.0"
  },
  "devDependencies": {
    "@types/figlet": "^1.5.6",
    "bun-types": "latest",
    "eslint": "^8.50.0",
    "eslint-config-neon": "^0.1.56",
    "eslint-formatter-pretty": "^5.0.0",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2"
  }
}
